<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/loginBackGround"
              android:orientation="vertical">

    <!--点击选择国家-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginTop"
        android:layout_margin="@dimen/marginTen"
        android:background="@color/editColor"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTen"
            android:text="国家和地区"
            android:textColor="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/register_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/marginTen"
                android:src="@mipmap/shared_next_icon_right"/>
        </LinearLayout>


    </RelativeLayout>

    <!--注册手机号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginTop"
        android:layout_margin="@dimen/marginTen"
        android:background="@color/editColor"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <requestFocus/>
        </LinearLayout>

        <TextView
            android:id="@+id/country_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTen"
            android:text="@string/number"
            android:textColor="@color/colorWhite"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/country_number"
            android:gravity="center_vertical"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginTen"
                android:background="@null"
                android:digits="@string/filter_vcode"
                android:hint="@string/phone_number"
                android:lines="1"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/hintColor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginTen"
                android:src="@mipmap/community_nickedit_delelte"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>

    <!--下一步-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginTop"
        android:layout_margin="@dimen/marginTen"
        android:background="@color/colorGray"
        android:text="下一步"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:text="@string/SHOW"/>


</LinearLayout>